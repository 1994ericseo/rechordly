    <ImageButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="fitStart"
    android:id="@+id/lyric_btn"
    android:background="@android:color/transparent"
    android:src="@drawable/record_lyrics_btn"
    android:layout_gravity="center"
    android:layout_alignParentTop="true"
    android:layout_marginTop="33dp" android:layout_marginRight="-4dp"
    android:onClick="recordLyrics"/>



    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:id="@+id/music_btn"
        android:background="@android:color/transparent"
        android:src="@drawable/record_music_btn"
        android:layout_gravity="center"
        android:layout_below="@id/lyric_btn"
        android:layout_marginTop="24dp"
        android:layout_marginRight="-4dp"
        android:onClick="recordMusic"/>

</RelativeLayout>
