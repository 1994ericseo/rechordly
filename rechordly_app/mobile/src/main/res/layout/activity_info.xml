<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/mytext"
                android:textSize="30sp"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/duration"
        android:gravity="center"
        android:layout_below="@+id/view"
        android:textSize="45sp"
        android:text="Duration"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/wave"
        android:src="@drawable/wave"
        android:layout_below="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:id="@+id/effects_play_button"
        android:layout_below="@+id/wave"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="240dp"
        android:layout_height="90dp">

        <LinearLayout
            android:id="@+id/effects"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="220dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/vol_val"
                android:textSize="20sp"
                android:text="Volume text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/echo_val"
                android:layout_gravity="bottom"
                android:textSize="20sp"
                android:text="Echo text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ToggleButton
        android:layout_toRightOf="@+id/effects_play_button"
        android:layout_below="@+id/wave"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/playback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/check"
        android:gravity="center"
        android:textOn=""
        android:textOff=""
        android:textSize="0sp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Space
        android:id="@+id/space2"
        android:layout_below="@+id/effects_play_button"
        android:layout_width="20dp"
        android:layout_height="60dp" />

    <ImageButton
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Lyrics"
        android:id="@+id/lyric"
        android:background="@null"
        android:layout_above="@+id/edit"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Edit"
        android:id="@+id/edit"
        android:background="@null"
        android:layout_below="@+id/space2"
        android:layout_alignStart="@+id/lyric" />


    <!--<android.support.v4.view.ViewPager-->
